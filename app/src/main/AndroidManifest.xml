<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.tends2zero.elearnenglish">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignIn"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SignUp"
            android:parentActivityName=".SignIn" />
        <activity
            android:name=".GuidedWriting"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".WritingParagraph"
            android:parentActivityName=".GuidedWriting" />
        <activity
            android:name=".WritingDialog"
            android:parentActivityName=".GuidedWriting" />
        <activity
            android:name=".WritingComposition"
            android:parentActivityName=".GuidedWriting" />
        <activity
            android:name=".WritingInformalEmail"
            android:parentActivityName=".GuidedWriting" />
        <activity
            android:name=".WritingFormalEmail"
            android:parentActivityName=".GuidedWriting" />
        <activity
            android:name=".WritingInformalLetter"
            android:parentActivityName=".GuidedWriting" />
        <activity
            android:name=".WritingCV"
            android:parentActivityName=".GuidedWriting" />
        <activity
            android:name=".WritingApplication"
            android:parentActivityName=".GuidedWriting" />
        <activity
            android:name=".WritingBusinessLetter"
            android:parentActivityName=".GuidedWriting" />
        <activity
            android:name=".WritingComplaintLetter"
            android:parentActivityName=".GuidedWriting" />
        <activity
            android:name=".WritingStory"
            android:parentActivityName=".GuidedWriting" />
        <activity android:name=".ShowContent"></activity>
    </application>

</manifest>